<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Kokonats" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/common_bg</item>
        <item name="colorPrimaryDark">@color/common_bg</item>
        <item name="colorPrimaryVariant">@color/common_bg</item>
        <item name="colorOnPrimary">@color/common_bg</item>

        <item name="android:windowBackground">@color/common_bg</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:fontFamily">@font/noto_sans</item>
    </style>

    <style name="Theme.KokonatsChat" parent="Theme.Kokonats">
        <item name="android:windowBackground">@color/common_90_bg</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorPrimary">@color/common_90_bg</item>
        <item name="colorPrimaryDark">@color/common_90_bg</item>
        <item name="android:statusBarColor">@color/common_90_bg</item>
        <item name="android:backgroundDimAmount">0.8</item>
    </style>

</resources>