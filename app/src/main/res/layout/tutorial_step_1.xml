<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/rect20_white">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_tutorial_1"
        android:scaleType="centerCrop"/>
    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_v_energy16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_energy"
        android:layout_width="195dp"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/h32"
        android:paddingHorizontal="@dimen/w10"
        android:paddingVertical="@dimen/h10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/rect20_black1affcb00"
        app:layout_constraintTop_toBottomOf="@+id/iv_icon">
        <ImageView
            android:id="@+id/iv_view_energy"
            android:layout_width="@dimen/w18"
            android:layout_height="@dimen/h36"
            android:layout_marginStart="@dimen/w8"
            android:scaleType="fitXY"
            android:src="@drawable/ic_v_energy16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_energy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/w44"
            android:paddingHorizontal="3dp"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_28"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/h4"
            android:layout_marginStart="@dimen/w10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/iv_view_energy"
            app:layout_constraintRight_toLeftOf="@+id/iv_view_add"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0"
            android:text="200" />

        <ImageView
            android:id="@+id/iv_view_add"
            android:layout_width="@dimen/w30"
            android:layout_height="@dimen/w30"
            android:scaleType="centerInside"
            android:src="@drawable/ic_v_energy_add_blue20"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tutorial_message_1"
        android:gravity="center"
        android:textSize="@dimen/font_18"
        android:textStyle="bold"
        android:lineHeight="@dimen/h32"
        android:textColor="@color/color_black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_energy"
        android:layout_marginTop="@dimen/h32"/>
</androidx.constraintlayout.widget.ConstraintLayout>