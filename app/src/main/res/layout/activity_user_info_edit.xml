<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/h22">


    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="@dimen/w44"
        android:layout_height="@dimen/w44"
        android:layout_marginStart="@dimen/font_24"
        android:src="@drawable/ic_v_common_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="81dp"
        android:layout_height="81dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/h26"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_logout"
        app:layout_constraintWidth_percent="0.217"
        tools:src="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/tv_uid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/h18"
        android:paddingStart="@dimen/h26"
        android:paddingEnd="@dimen/h26"
        android:singleLine="true"
        android:textColor="@color/gray_d8d8d8"
        android:textSize="@dimen/font_12"
        tools:text="UID:19836271298" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/h22"
        android:paddingHorizontal="@dimen/w10"
        tools:itemCount="5"
        tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        tools:listitem="@layout/item_user_info_edit_avatar" />


    <EditText
        android:id="@+id/et_nick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/w54"
        android:layout_marginTop="@dimen/h22"
        android:background="@drawable/rect10_trans_gray323755"
        android:maxLength="10"
        android:paddingHorizontal="@dimen/w17"
        android:paddingVertical="@dimen/h14"
        android:textColor="@color/color_white"
        tools:text="asd" />

    <TextView
        android:id="@+id/tv_ok"
        android:layout_width="140dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/h26"
        android:background="@drawable/gradient_common_blue"
        android:gravity="center"
        android:text="@string/dialog_common_ok"
        android:textColor="@color/color_white" />

</LinearLayout>