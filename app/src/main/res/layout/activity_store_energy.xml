<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.store.energy.StoreEnergyActivity">
    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:src="@drawable/ic_v_common_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/h28"
        android:layout_marginLeft="@dimen/w20"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/energy"
        android:textColor="@color/color_white"
        android:textSize="@dimen/font_30"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/iv_back"
        app:layout_constraintBottom_toBottomOf="@+id/iv_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_energy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/w20"
        android:layout_marginTop="@dimen/h20"
        android:background="@drawable/rect20_black1affcb00"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_back">
        <ImageView
            android:id="@+id/iv_energy"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:paddingVertical="@dimen/h9"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_v_energy16"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/tv_energy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123,456,789"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_28"
            android:textStyle="bold"
            android:layout_marginHorizontal="@dimen/w35"
            app:layout_constraintLeft_toRightOf="@id/iv_energy"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_energy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_energy"
        android:layout_marginTop="@dimen/h48"
        android:layout_marginHorizontal="@dimen/w35"
        app:cardCornerRadius="@dimen/dp_10"
        app:cardElevation="@dimen/dp_10"
        android:focusable="true"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/black_21283f">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/h20">
            <ImageView
                android:id="@+id/iv_energy_cover"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/bg_energy_item"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/tv_energy_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KOKO GAMES"
                android:textColor="@color/black_7583ca"
                android:textSize="@dimen/font_14"
                app:layout_constraintTop_toBottomOf="@+id/iv_energy_cover"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/w20"
                android:layout_marginTop="-10dp" />
            <TextView
                android:id="@+id/tv_energy_url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="https://game.kokonats.club"
                android:textColor="@color/color_white"
                android:textSize="@dimen/font_14"
                android:layout_marginTop="@dimen/h5"
                app:layout_constraintTop_toBottomOf="@+id/tv_energy_title"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/w20" />
            <ImageView
                android:id="@+id/iv_energy_copy"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/circle_black191a32_ripple"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/tv_energy_url"
                android:src="@drawable/ic_copy"
                android:scaleType="fitXY"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginEnd="@dimen/w20"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>