<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.store.item.StoreGameActivity">
    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:src="@drawable/ic_v_common_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/h28"
        android:layout_marginLeft="@dimen/w20"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/items"
        android:textColor="@color/color_white"
        android:textSize="@dimen/font_30"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/iv_back"
        app:layout_constraintBottom_toBottomOf="@+id/iv_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_credit"
        android:layout_width="295dp"
        android:layout_height="60dp"
        android:paddingHorizontal="@dimen/w20"
        android:layout_marginTop="@dimen/h20"
        android:background="@drawable/rect16_yellowfabe2c"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_back">
        <ImageView
            android:id="@+id/iv_credit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingVertical="@dimen/h9"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_koko"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/tv_credit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123,456,789"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_28"
            android:textStyle="bold"
            android:layout_marginHorizontal="@dimen/w35"
            app:layout_constraintLeft_toRightOf="@id/iv_credit"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@drawable/rect10_black21283f_ripple_shadow"
        android:focusable="true"
        android:clickable="true"
        android:layout_marginBottom="@dimen/h8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="@dimen/w20"
        app:layout_constraintTop_toBottomOf="@id/cl_credit"
        android:layout_marginTop="@dimen/h28"
        tools:viewBindingIgnore="true">
        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_18"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginLeft="@dimen/w20"
            app:layout_constraintLeft_toRightOf="@+id/iv_cover"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/tv_coming_soon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COMING SOON"
        android:textSize="@dimen/font_20"
        android:textStyle="bold"
        android:textColor="@color/color_white"
        app:layout_constraintTop_toBottomOf="@id/cl_game"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/h20"/>

    <GridView
        android:id="@+id/gv_items"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/w20"
        app:layout_constraintTop_toBottomOf="@+id/cl_game"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/h20"
        android:numColumns="3"
        android:scrollbarSize="0dp"
        android:horizontalSpacing="@dimen/w16"
        android:verticalSpacing="@dimen/h16"
        android:paddingBottom="@dimen/h8"
        tools:listitem="@layout/item_store_game_item"/>
</androidx.constraintlayout.widget.ConstraintLayout>