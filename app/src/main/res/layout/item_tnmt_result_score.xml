<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/h5"
    android:paddingVertical="@dimen/h7">

    <TextView
        android:id="@+id/tv_rank"
        android:layout_width="@dimen/h36"
        android:layout_height="@dimen/h36"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:textSize="@dimen/font_12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@drawable/oval_black19ffcb00"
        tools:text="01"
        tools:textColor="@color/color_white" />

    <TextView
        android:id="@+id/tv_score"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/w7"
        android:layout_marginEnd="@dimen/w18"
        android:ellipsize="end"
        android:fontFamily="sans-serif-black"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:textColor="@color/color_white"
        android:textSize="@dimen/font_14"
        app:layout_constrainedWidth="true"
        app:layout_constraintLeft_toRightOf="@+id/tv_rank"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_rank"
        tools:text="1234123124124" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:textColor="@color/color_white"
        android:textSize="@dimen/font_12"
        app:layout_constraintBottom_toBottomOf="@+id/tv_rank"
        app:layout_constraintLeft_toLeftOf="@+id/tv_score"
        app:layout_constraintRight_toRightOf="@+id/tv_score"
        tools:text="UserName" />


</androidx.constraintlayout.widget.ConstraintLayout>