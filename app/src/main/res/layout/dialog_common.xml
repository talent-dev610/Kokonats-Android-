<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rect10_white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/w60"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/h28"
        android:adjustViewBounds="true"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/h10"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:maxLines="2"
        android:paddingHorizontal="@dimen/w20"
        android:textColor="@color/color_black"
        android:textSize="@dimen/font_20"
        android:textStyle="bold"
        tools:text="Title" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/h8"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:maxLines="2"
        android:paddingHorizontal="@dimen/w20"
        android:textColor="@color/color_black"
        android:textSize="@dimen/font_13"
        tools:text="1234" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/h18"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/w34"
        android:paddingBottom="@dimen/h40">

        <TextView
            android:id="@+id/tv_left"
            android:layout_width="0dp"
            android:layout_height="@dimen/h42"
            android:layout_marginEnd="@dimen/w8"
            android:layout_weight="1"
            android:background="@drawable/rect9_black21283f"
            android:gravity="center"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_12"
            android:textStyle="bold"
            tools:text="@string/back" />


        <TextView
            android:id="@+id/tv_right"
            android:layout_width="0dp"
            android:layout_height="@dimen/h42"
            android:layout_marginStart="@dimen/w8"
            android:layout_weight="1"
            android:background="@drawable/gradient_common_blue"
            android:gravity="center"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_12"
            android:textStyle="bold"
            tools:text="@string/play_again" />


    </LinearLayout>

</LinearLayout>